// Jenkinsfile (Declarative Pipeline)
pipeline {
     agent { node { label 'AGENT-1' } }                                               //any

    stages {
        stage('init') {
            steps {
                
                sh '''
                  cd vpc-01
                  ls -ltr
                  pwd
                  terraform init

                '''    
            }
        }
        stage('plan') {
            steps {
                sh '''
                  cd vpc-01
                  ls -ltr
                  pwd
                  terraform plan

                '''  
            }
        }
        
    }
       

}